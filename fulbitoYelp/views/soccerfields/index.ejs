<% layout('layouts/boilerplate') %>
    <h1>All Soccerfields</h1>
    <% for (let s of soccerfield) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=s.image%> ">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= s.title %></h5>
                        <p class="card-text"><%= s.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= s.location %></small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>