<% layout('layouts/boilerplate') %>

    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1>Canchitas</h1>
    <% for (let s of soccerfield) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(s.images.length) {%>
                        <img class="img-fluid" src="<%= s.images[0].url %> ">
                        <% } else { %>
                            <img class="img-fluid"
                                src="https://res.cloudinary.com/dfknsvqer/image/upload/v1669034838/YelpSoccer/jivpdwnopinqalxoxh0y.jpg"
                                <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= s.title %>
                        </h5>
                        <p class="card-text">
                            <%= s.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= s.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/soccerfields/<%= s._id %>">Ver <%= s.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
            </script>

            <script src="/javascripts/clusterMap.js"></script>