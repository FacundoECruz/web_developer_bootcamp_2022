<% layout('layouts/boilerplate') %>
    <h1>Canchitas</h1>
    <% for (let s of soccerfield) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= s.images[0].url %> ">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= s.title %></h5>
                        <p class="card-text"><%= s.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= s.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/soccerfields/<%= s._id %>">Ver <%= s.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>