<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://www.clarin.com/img/2022/09/27/lionel-messi-hablo-en-una___sHZlTLfdB_2000x1500__1.jpg"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Registrarse</h5>
          <form
            action="/register"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">Nombre de usuario</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="valid-feedback">Bien Ahi!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                required
              />
              <div class="valid-feedback">Bien Ahi!</div>
              <div class="invalid-feedback">Please provide a valid Email.</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Contrase√±a</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Bien Ahi!</div>
            </div>
            <button class="btn btn-success btn-block">Registrarse</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
